<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    android:orientation="vertical"
    tools:context=".module.Login">
    <include
        layout="@layout/top_bar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/txtsize25"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/Loginlayout"
                    android:layout_marginTop="@dimen/marging_20"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/edt_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Employee Id"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />
                </LinearLayout>
                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edt_designation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Designatio"
                        android:singleLine="true"

                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>
                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">



                    <EditText
                        android:id="@+id/edt_fatherName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Father Name"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>
                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">



                    <EditText
                        android:id="@+id/edt_mother"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Mother Name"
                        android:singleLine="true"

                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>


                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">


                    <EditText
                        android:id="@+id/edt_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Date Of Birth"
                        android:singleLine="true"

                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Address"
                        android:singleLine="true"

                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/asc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/phone_icon" />

                    <EditText
                        android:id="@+id/edt_contact"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Contact"
                        android:inputType="number"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/user_icon" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Email Id"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>
                <LinearLayout
                    style="@style/Loginlayout"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/login_password_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/pass" />

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txtsize15" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="@style/Button"
                    android:background="#D3E7EF"
                    android:layout_marginTop="@dimen/marging_10"
                    android:text="Save" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
